{
  "name": "mullvad-privacy-companion",
  "displayName": "Mullvad Privacy Companion",
  "version": "0.6.1",
  "description": "Easily improve your privacy",
  "private": true,
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:copy",
    "build:prepare": "esno scripts/prepare.ts",
    "build:copy": "esno scripts/copyFilesToExtensionFolder.ts",
    "build:web": "vite build",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension/README.md extension/LICENSE.md extension.* key.pem",
    "lint": "npm run eslint && npm run lint:style",
    "eslint": "eslint . --ext=.ts,.js,.vue",
    "eslint:fix": "npm run eslint -- --fix",
    "lint:style": "stylelint \"src/**/*.{css,scss,vue}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "tsc": "vue-tsc --noEmit",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.5",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.10.2",
    "@types/uuid": "^8.3.3",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-rc.17",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "@vueuse/core": "^7.5.1",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "esno": "^0.13.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-webextension-mock": "^3.7.19",
    "kolorist": "^1.5.1",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "unplugin-vue-components": "^0.15.4",
    "vite": "^2.7.10",
    "vite-plugin-windicss": "^1.6.1",
    "vue": "^3.2.19",
    "vue-demi": "^0.11.4",
    "vue-tsc": "^0.30.1",
    "web-ext": "^6.4.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "naive-ui": "^2.24.6",
    "uuid": "^8.3.2",
    "vue-query": "^1.16.2",
    "vue-router": "^4.0.12"
  }
}
