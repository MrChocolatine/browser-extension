{
  "name": "mullvad-privacy-companion",
  "displayName": "Mullvad Privacy Companion",
  "version": "0.6.1",
  "description": "Easily improve your privacy",
  "private": true,
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "npm run eslint && npm run lint:style",
    "eslint": "eslint . --ext=.ts,.js,.vue",
    "lint:style": "stylelint src/**/*.css",
    "tsc": "vue-tsc --noEmit",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.5",
    "@iconify/json": "^1.1.408",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.10.2",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-rc.17",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "@vueuse/core": "^6.5.3",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.2.0",
    "esno": "^0.13.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "kolorist": "^1.5.0",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-jest": "^27.1.1",
    "typescript": "^4.4.3",
    "unplugin-auto-import": "^0.4.8",
    "unplugin-icons": "^0.11.4",
    "unplugin-vue-components": "^0.15.4",
    "vite": "^2.7.3",
    "vite-plugin-windicss": "^1.4.8",
    "vue": "^3.2.19",
    "vue-demi": "^0.11.4",
    "vue-tsc": "^0.29.8",
    "web-ext": "^6.4.0",
    "webext-bridge": "^5.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "vue-router": "^4.0.12",
    "vue-snap": "^1.0.0-alpha.5"
  }
}
